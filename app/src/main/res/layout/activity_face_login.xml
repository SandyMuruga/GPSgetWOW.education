<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trasparant"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="@dimen/_60dp"
        android:layout_height="@dimen/_70dp"
        android:layout_marginStart="@dimen/_45dp"
        android:layout_marginEnd="@dimen/_10dp"
        android:translationZ="@dimen/_60dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_customer_logo"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="@dimen/_2dp"
            android:background="@drawable/bg_white_rectangle"
            android:src="@drawable/app_icon" />

    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_profile_pic"
        android:layout_width="@dimen/_55dp"
        android:layout_height="@dimen/_55dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/_5dp"
        android:background="@drawable/bg_white_rectangle"
        android:elevation="@dimen/_10dp"
        android:translationZ="@dimen/_60dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_user_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_launcher_foreground" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50dp"
        android:background="@color/colorPrimary"
        android:elevation="@dimen/_5dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/_40dp"
            android:layout_height="@dimen/_40dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_5dp"
            android:layout_marginLeft="@dimen/_20dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="@dimen/_8dp"
            android:src="@drawable/ic_left_arrow" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_60dp"
            android:layout_marginLeft="@dimen/_90dp"
            android:layout_toEndOf="@+id/iv_back"
            android:layout_toRightOf="@+id/iv_back"
            android:includeFontPadding="false"
            android:text="getWOW.study Block Social"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_header1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50dp"
        android:layout_below="@+id/rl_header"
        android:background="@color/colorGray"
        android:elevation="@dimen/_5dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title_name8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="Login"
            android:textColor="@color/white"
            android:textSize="@dimen/_17dp"
            android:textStyle="bold" />
    </RelativeLayout>


    <RelativeLayout
        android:background="#ABF942"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_header1">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginEnd="@dimen/_10dp"
                android:layout_marginBottom="@dimen/_10dp">

                <LinearLayout
                    android:id="@+id/ll_logo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_user_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Hello Antony S"
                        android:textColor="@color/red"
                        android:textSize="@dimen/_20dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10dp"
                            android:layout_marginTop="@dimen/_25dp"
                            android:gravity="center"
                            android:text="Face Recognition Login"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_25dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rl_logo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_logo"
                    android:layout_marginTop="@dimen/_20dp"
                    android:gravity="center">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_200dp"
                        android:layout_height="@dimen/_200dp"
                        android:gravity="center"
                        android:src="@drawable/face_login_image" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_mo_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_logo"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_contry_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ll_contry_code"
                        android:layout_margin="@dimen/_10dp"
                        android:layout_marginTop="@dimen/_20dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10dp"
                            android:layout_marginTop="@dimen/_10dp"
                            android:gravity="center"
                            android:text="Password Login"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_18dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_gravity="center"
                        android:id="@+id/ll_password"
                        android:layout_width="200dp"
                        android:layout_height="@dimen/_35dp"
                        android:layout_below="@+id/ll_username"
                        android:layout_marginLeft="@dimen/_15dp"
                        android:layout_marginTop="@dimen/_10dp"
                        android:layout_marginRight="@dimen/_15dp"
                        android:layout_marginBottom="@dimen/_15dp"
                        android:background="@drawable/et_border">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/et_password"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/_17dp"
                            android:layout_marginRight="@dimen/_17dp"
                            android:layout_weight="0.9"
                            android:background="@color/trasparant"
                            android:focusable="true"
                            android:hint="Password"
                            android:importantForAutofill="no"
                            android:includeFontPadding="false"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:paddingStart="@dimen/_16dp"
                            android:paddingLeft="@dimen/_16dp"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/black"
                            android:textColorHint="@color/light_gray"
                            android:textCursorDrawable="@drawable/cursor_color"
                            android:textSize="@dimen/_14sp" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/iv_eye_new"
                            android:layout_width="0dip"
                            android:layout_height="@dimen/_24dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:layout_marginEnd="@dimen/_17dp"
                            android:layout_weight="0.1"
                            android:src="@drawable/ic_hide_password"
                            android:visibility="visible" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_next"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_mo_no"
                    android:layout_marginTop="@dimen/_10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/face_login_btn"
                        android:layout_width="@dimen/_250dp"
                        android:layout_height="35dp"
                        android:background="@drawable/rounded_rectangle_blue_filled"
                        android:text="LOGIN"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15sp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_app_admin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10dp"
                        android:layout_marginTop="@dimen/_45dp"
                        android:gravity="center"
                        android:text="In case you forgot the password, Please contact your APP Administrators in order to reset the password."
                        android:textStyle="bold" />
                </LinearLayout>

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

    <include
        layout="@layout/layout_no_internet_connection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/rl_map_icon"
        android:layout_alignParentBottom="true"
        android:visibility="gone" />

</RelativeLayout>








